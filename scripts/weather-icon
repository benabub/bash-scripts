#!/usr/bin/env python3

import os
import requests
import sys
import json
from datetime import datetime, timedelta
from time import sleep
from pathlib import Path

CACHE_FILE = Path.home() / ".cache" / "weather_icon_cache.json"


def get_weather_icon():
    try:
        api_key = os.environ.get('OWM_API_KEY')
        city = os.environ.get('OWM_CITY')

        if not api_key or not city:
            raise ValueError("ÐŸÑ€Ð¾Ð²ÐµÑ€ÑŒÑ‚Ðµ OWM_API_KEY Ð¸ OWM_CITY Ð² .zshrc")

        url = (
            "http://api.openweathermap.org/data/2.5/"
            f"weather?q={city}&appid={api_key}&units=metric"
        )

        retries = 3
        timeout = 30

        for attempt in range(retries):
            try:
                response = requests.get(url, timeout=timeout)
                response.raise_for_status()
                data = response.json()

                # Checking day/night
                current_time = datetime.now().timestamp()
                is_day = (data['sys']['sunrise'] <
                          current_time <
                          data['sys']['sunset'])

                # Fetching weather type
                weather_main = data['weather'][0]['main']

                icons = {
                    'Clear': 'â˜€ï¸' if is_day else 'ðŸŒ™',
                    'Clouds': 'â˜ï¸',
                    'Rain': 'ðŸŒ§ï¸',
                    'Drizzle': 'ðŸŒ¦ï¸',
                    'Thunderstorm': 'â›ˆï¸',
                    'Snow': 'â„ï¸',
                    'Mist': 'ðŸŒ«ï¸',
                    'Fog': 'ðŸŒ«ï¸'
                }

                icon = icons.get(weather_main, 'ðŸŒ€')

                cache_data = {
                    'icon': icon,
                    'timestamp': datetime.now().timestamp()
                }
                CACHE_FILE.parent.mkdir(parents=True, exist_ok=True)
                with open(CACHE_FILE, 'w') as f:
                    json.dump(cache_data, f)

                return icon

            except requests.exceptions.Timeout:
                if attempt < retries - 1:
                    sleep(5)
                    continue
                raise

    except Exception as e:
        print(f"Error: {e}", file=sys.stderr)
        try:
            if CACHE_FILE.exists():
                with open(CACHE_FILE) as f:
                    cache_data = json.load(f)
                cache_time = datetime.fromtimestamp(cache_data['timestamp'])
                if datetime.now() - cache_time < timedelta(hours=1):
                    return cache_data['icon']
        except Exception as cache_error:
            print(f"Cache read error: {cache_error}", file=sys.stderr)

        return "E"


if __name__ == "__main__":
    print(get_weather_icon())
