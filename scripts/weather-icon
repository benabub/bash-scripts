#!/usr/bin/env python3

import os
import requests
import sys
from datetime import datetime
from time import sleep


def get_weather_icon():
    try:
        api_key = os.environ.get('OWM_API_KEY')
        city = os.environ.get('OWM_CITY')

        if not api_key or not city:
            raise ValueError("ÐŸÑ€Ð¾Ð²ÐµÑ€ÑŒÑ‚Ðµ OWM_API_KEY Ð¸ OWM_CITY Ð² .zshrc")

        url = (
            "http://api.openweathermap.org/data/2.5/"
            f"weather?q={city}&appid={api_key}&units=metric"
        )

        retries = 3
        timeout = 30

        for attempt in range(retries):
            try:
                response = requests.get(url, timeout=timeout)
                response.raise_for_status()
                data = response.json()

                # Checking day/night
                current_time = datetime.now().timestamp()
                is_day = (data['sys']['sunrise'] <
                          current_time <
                          data['sys']['sunset'])

                # Fetching weather type
                weather_main = data['weather'][0]['main']

                icons = {
                    'Clear': 'â˜€ï¸' if is_day else 'ðŸŒ™',
                    'Clouds': 'â˜ï¸',
                    'Rain': 'ðŸŒ§ï¸',
                    'Drizzle': 'ðŸŒ¦ï¸',
                    'Thunderstorm': 'â›ˆï¸',
                    'Snow': 'â„ï¸',
                    'Mist': 'ðŸŒ«ï¸',
                    'Fog': 'ðŸŒ«ï¸'
                }

                # Default icon (unknown weather)
                return icons.get(weather_main, 'ðŸŒ€')

            except requests.exceptions.Timeout:
                if attempt < retries - 1:
                    sleep(5)
                    continue
                raise

    except Exception as e:
        print(f"ÐžÑˆÐ¸Ð±ÐºÐ°: {e}", file=sys.stderr)
        return "E"


if __name__ == "__main__":
    print(get_weather_icon())
